<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<screen id="menu">
		<layer childLayout="horizontal">
			<panel childLayout="vertical" width="10%">
				<text text="Width:" font="Interface/Fonts/Default.fnt"/>
				<text text="Height:" font="Interface/Fonts/Default.fnt"/>
				<text text="Type:" font="Interface/Fonts/Default.fnt"/>
				<text text="Elevation:" font="Interface/Fonts/Default.fnt"/>
				<text text="Rotation:" font="Interface/Fonts/Default.fnt"/>
				<text text="Brush Size:" font="Interface/Fonts/Default.fnt"/>
				<text text="Spawn:" font="Interface/Fonts/Default.fnt"/>
			</panel>
			<panel childLayout="vertical" width="10%">
				<control id="width" name="textfield" filter="[0-9]"/>
				<control id="height" name="textfield" filter="[0-9]"/>
				<control id="type" name="dropDown"/>
				<control id="elevation" name="textfield" filter="[~\-0-9]"/>
				<control id="rotation" name="textfield" filter="[\-0-9]"/>
				<control id="brushSize" name="textfield" filter="[0-9]"/>
				<control id="spawn" name="checkbox" />
			</panel>
		</layer>
	</screen>

	<screen id="edit">
		<layer/>
	</screen>

</nifty>
